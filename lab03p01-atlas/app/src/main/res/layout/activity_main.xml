<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tv_tytul"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/tytul"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="20sp"
        android:layout_margin="10dp"
        android:background="@color/tlo"
        android:textColor="@color/white"
        android:padding="10dp"
        android:gravity="center"/>

    <ImageView
        android:id="@+id/ramka"
        android:layout_width="0dp"
        android:layout_height="300dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_tytul"
        android:layout_margin="10dp"
        android:background="@color/tlo"
        android:padding="10dp"
        android:src="@drawable/kania"/>

    <TextView
        android:id="@+id/tv_nazwa"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Tymczasowa\nnazwa"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ramka"
        android:textSize="20sp"
        android:layout_margin="10dp"
        android:background="@color/tlo"
        android:textColor="@color/white"
        android:padding="10dp"
        android:gravity="center"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/linia_01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5"/>

    <Button
        android:id="@+id/btn_ws"
        android:text="@string/btn_ws"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/linia_01"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="10dp"
        android:backgroundTint="@color/tlo"/>

    <Button
        android:id="@+id/btn_np"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="@string/btn_np"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/linia_01"
        android:backgroundTint="@color/tlo"/>

    <TextView
        android:id="@+id/tv_opis"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="PrzykÅ‚adowy opis"
        app:layout_constraintTop_toBottomOf="@id/tv_nazwa"
        app:layout_constraintBottom_toTopOf="@id/btn_np"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:textSize="18sp"
        android:layout_margin="10dp"
        android:background="@color/tlo"
        android:textColor="@color/white"
        android:padding="10dp"
        android:gravity="center"/>

</androidx.constraintlayout.widget.ConstraintLayout>